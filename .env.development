# =============================================================================
# Notification Service Development Environment Configuration
# =============================================================================
# This file is used for VS Code debugging when connecting to development infrastructure
# Copied to .env automatically by scripts/deploy.sh development

# =============================================================================
# Service Configuration
# =============================================================================
NODE_ENV=development
PORT=3003
HOST=localhost
SERVICE_NAME=notification-service
SERVICE_VERSION=1.0.0-dev
API_VERSION=1.0.0

# =============================================================================
# Database Configuration
# =============================================================================
# MySQL connection - connects to development Docker infrastructure
DB_HOST=localhost
DB_PORT=3307
DB_NAME=notification_service_dev_db
DB_USER=notification_user
DB_PASSWORD=notification_dev_secure_pass_456

# =============================================================================
# Message Broker Configuration
# =============================================================================
# Connects to development Docker infrastructure
RABBITMQ_URL=amqp://admin:rabbitmq_dev_secure_654@localhost:5673
RABBITMQ_EXCHANGE_ORDER=order.events
RABBITMQ_EXCHANGE_USER=user.events
RABBITMQ_EXCHANGE_NOTIFICATION=notification.events
RABBITMQ_QUEUE_NOTIFICATIONS=notifications
RABBITMQ_QUEUE_EMAIL=notifications.email
RABBITMQ_QUEUE_SMS=notifications.sms
RABBITMQ_QUEUE_PUSH=notifications.push

# =============================================================================
# Service Discovery
# =============================================================================
# Development infrastructure services - connects to other microservices
USER_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3001
ADMIN_SERVICE_URL=http://localhost:3010
AUDIT_SERVICE_URL=http://localhost:9000

# =============================================================================
# Cache Configuration
# =============================================================================
# Redis connection - connects to development Docker infrastructure, uses database 5
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=redis_dev_secure_pass_321
REDIS_DB=5
REDIS_URL=redis://:redis_dev_secure_pass_321@localhost:6380/5

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=dev-7a9f2d84b3c6e1f8a5d7c2b9e6f4a1d8c5b2e9f6a3d0c7b4e1f8a5d2c9b6e3f0a7
JWT_EXPIRE=24h

# =============================================================================
# Email Configuration
# =============================================================================
# Email service for notifications (development)
EMAIL_ENABLED=true
EMAIL_PROVIDER=smtp
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=dev-smtp-user
SMTP_PASS=dev-smtp-password
EMAIL_FROM_NAME=AI Outlet Notifications (Dev)
EMAIL_FROM_ADDRESS=dev-noreply@aioutlet.com

# =============================================================================
# SMS Configuration
# =============================================================================
# SMS service for notifications (development)
SMS_ENABLED=false
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-dev-twilio-account-sid
TWILIO_AUTH_TOKEN=your-dev-twilio-auth-token
SMS_FROM_NUMBER=your-dev-twilio-phone-number

# =============================================================================
# Push Notification Configuration
# =============================================================================
# Push notification service (development)
PUSH_ENABLED=false
FCM_SERVER_KEY=your-dev-firebase-server-key
FCM_PROJECT_ID=your-dev-firebase-project-id

# =============================================================================
# Notification Configuration
# =============================================================================
# Notification-specific settings
EMAIL_TEMPLATE_PATH=./templates/email
SMS_TEMPLATE_PATH=./templates/sms
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY_MS=1000
BATCH_SIZE=100
RATE_LIMIT_PER_MINUTE=1000

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3003,http://localhost:3010

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/notification-service-development.log

# =============================================================================
# Observability Configuration  
# =============================================================================
# Tracing
ENABLE_TRACING=true
OTEL_SERVICE_NAME=notification-service
OTEL_SERVICE_VERSION=1.0.0-dev
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Correlation ID
CORRELATION_ID_HEADER=x-correlation-id