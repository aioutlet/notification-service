# =============================================================================
# Notification Service Environment Configuration Template
# =============================================================================
# This file serves as a template for creating environment-specific .env files
# Copy this file and rename it to .env, then fill in the appropriate values

# =============================================================================
# Service Configuration
# =============================================================================
NODE_ENV=local
PORT=3003
HOST=localhost
SERVICE_NAME=notification-service
SERVICE_VERSION=1.0.0
API_VERSION=1.0.0

# =============================================================================
# Database Configuration
# =============================================================================
# MySQL connection settings
DB_HOST=localhost
DB_PORT=3306
DB_NAME=notification_service_db
DB_USER=notification_user
DB_PASSWORD=your-mysql-password

# =============================================================================
# Message Broker Configuration
# =============================================================================
# RabbitMQ connection and queue configuration
RABBITMQ_URL=amqp://username:password@localhost:5672
RABBITMQ_EXCHANGE_ORDER=order.events
RABBITMQ_EXCHANGE_USER=user.events
RABBITMQ_EXCHANGE_NOTIFICATION=notification.events
RABBITMQ_QUEUE_NOTIFICATIONS=notifications
RABBITMQ_QUEUE_EMAIL=notifications.email
RABBITMQ_QUEUE_SMS=notifications.sms
RABBITMQ_QUEUE_PUSH=notifications.push

# =============================================================================
# Service Discovery
# =============================================================================
# URLs for connecting to other microservices
USER_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3001
ADMIN_SERVICE_URL=http://localhost:3010
AUDIT_SERVICE_URL=http://localhost:9000

# =============================================================================
# Cache Configuration
# =============================================================================
# Redis connection settings - notification service uses database 5
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=5
REDIS_URL=redis://:your-redis-password@localhost:6379/5

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=your-jwt-secret-key-at-least-256-bits-long
JWT_EXPIRE=24h

# =============================================================================
# Email Configuration
# =============================================================================
# Email service for notifications
EMAIL_ENABLED=true
EMAIL_PROVIDER=smtp
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
EMAIL_FROM_NAME=Your App Notifications
EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# =============================================================================
# SMS Configuration
# =============================================================================
# SMS service for notifications (Twilio)
SMS_ENABLED=false
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
SMS_FROM_NUMBER=your-twilio-phone-number

# =============================================================================
# Push Notification Configuration
# =============================================================================
# Firebase Cloud Messaging for push notifications
PUSH_ENABLED=false
FCM_SERVER_KEY=your-firebase-server-key
FCM_PROJECT_ID=your-firebase-project-id

# =============================================================================
# Notification Configuration
# =============================================================================
# Notification-specific settings
EMAIL_TEMPLATE_PATH=./templates/email
SMS_TEMPLATE_PATH=./templates/sms
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY_MS=1000
BATCH_SIZE=100
RATE_LIMIT_PER_MINUTE=1000

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3003,http://localhost:3010

# =============================================================================
# Environment Settings
# =============================================================================
DEBUG=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/notification-service.log

# =============================================================================
# Observability Configuration  
# =============================================================================
# OpenTelemetry tracing configuration
ENABLE_TRACING=true
OTEL_SERVICE_NAME=notification-service
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Request correlation tracking
CORRELATION_ID_HEADER=x-correlation-id
