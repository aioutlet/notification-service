# =============================================================================
# Notification Service Production Environment Configuration
# =============================================================================
# This file is used for VS Code debugging when connecting to production infrastructure
# Copied to .env automatically by scripts/deploy.sh production

# =============================================================================
# Service Configuration
# =============================================================================
NODE_ENV=production
PORT=3003
HOST=localhost
SERVICE_NAME=notification-service
SERVICE_VERSION=1.0.0
API_VERSION=1.0.0

# =============================================================================
# Database Configuration
# =============================================================================
# MySQL connection - connects to production Docker infrastructure
DB_HOST=localhost
DB_PORT=3308
DB_NAME=notification_service_prod_db
DB_USER=notification_user
DB_PASSWORD=CHANGE_ME_SECURE_MYSQL_PASSWORD

# =============================================================================
# Message Broker Configuration
# =============================================================================
# Connects to production Docker infrastructure
RABBITMQ_URL=amqp://admin:CHANGE_ME_SECURE_RABBITMQ_PASSWORD@localhost:5674
RABBITMQ_EXCHANGE_ORDER=order.events
RABBITMQ_EXCHANGE_USER=user.events
RABBITMQ_EXCHANGE_NOTIFICATION=notification.events
RABBITMQ_QUEUE_NOTIFICATIONS=notifications
RABBITMQ_QUEUE_EMAIL=notifications.email
RABBITMQ_QUEUE_SMS=notifications.sms
RABBITMQ_QUEUE_PUSH=notifications.push

# =============================================================================
# Service Discovery
# =============================================================================
# Production infrastructure services - connects to other microservices
USER_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3001
ADMIN_SERVICE_URL=http://localhost:3010
AUDIT_SERVICE_URL=http://localhost:9000

# =============================================================================
# Cache Configuration
# =============================================================================
# Redis connection - connects to production Docker infrastructure, uses database 5
REDIS_HOST=localhost
REDIS_PORT=6381
REDIS_PASSWORD=CHANGE_ME_SECURE_REDIS_PASSWORD
REDIS_DB=5
REDIS_URL=redis://:CHANGE_ME_SECURE_REDIS_PASSWORD@localhost:6381/5

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=CHANGE_ME_PRODUCTION_JWT_SECRET_AT_LEAST_256_BITS_LONG
JWT_EXPIRE=4h

# =============================================================================
# Email Configuration
# =============================================================================
# Email service for notifications (production)
EMAIL_ENABLED=true
EMAIL_PROVIDER=ses
AWS_SES_REGION=us-east-1
AWS_ACCESS_KEY_ID=CHANGE_ME_PRODUCTION_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_PRODUCTION_AWS_SECRET_KEY
EMAIL_FROM_NAME=AI Outlet Notifications
EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# =============================================================================
# SMS Configuration
# =============================================================================
# SMS service for notifications (production)
SMS_ENABLED=true
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=CHANGE_ME_PRODUCTION_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=CHANGE_ME_PRODUCTION_TWILIO_AUTH_TOKEN
SMS_FROM_NUMBER=CHANGE_ME_PRODUCTION_TWILIO_PHONE_NUMBER

# =============================================================================
# Push Notification Configuration
# =============================================================================
# Push notification service (production)
PUSH_ENABLED=true
FCM_SERVER_KEY=CHANGE_ME_PRODUCTION_FIREBASE_SERVER_KEY
FCM_PROJECT_ID=CHANGE_ME_PRODUCTION_FIREBASE_PROJECT_ID

# =============================================================================
# Notification Configuration
# =============================================================================
# Notification-specific settings (production optimized)
EMAIL_TEMPLATE_PATH=./templates/email
SMS_TEMPLATE_PATH=./templates/sms
NOTIFICATION_RETRY_ATTEMPTS=5
NOTIFICATION_RETRY_DELAY_MS=2000
BATCH_SIZE=500
RATE_LIMIT_PER_MINUTE=5000

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# =============================================================================
# Production Settings
# =============================================================================
DEBUG=false

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_CONSOLE=false
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/notification-service-production.log

# =============================================================================
# Observability Configuration  
# =============================================================================
# Tracing
ENABLE_TRACING=true
OTEL_SERVICE_NAME=notification-service
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otlp-endpoint:4318/v1/traces

# Correlation ID
CORRELATION_ID_HEADER=x-correlation-id